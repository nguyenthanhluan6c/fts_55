<fieldset>
  <div class = "question_option inline">
    <span class = "input-inline">
      <%= f.label :is_correct %>
      <%= f.check_box :is_correct, class: "single_checkbox" %>
    </span>
    <span class = "input-inline">
      <%= f.text_field :content %>
      <%= f.hidden_field :_destroy %>
      <%= link_to t("remove"), "", class: "remove_fields" %>
    </span>
  </div> 
</fieldset>
