<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= t "category.new_category" %></h3>
      </div>
      <div class="panel-body">
        <%= form_for @category do |f| %>
          <%= render "shared/error_messages", object: @category %>

          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>

          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>

          <%= f.label :number_of_words_in_examination %>
          <%= f.number_field :number_of_words_in_examination, class: "form-control" %>    

          <div class="actions">
            <%= f.submit t("create"), class: "btn btn-primary" %>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>
