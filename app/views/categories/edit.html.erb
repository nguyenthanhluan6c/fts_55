<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= @category.name %></h3>
      </div>
      <div class="panel-body">
        <%= form_for @category do |f| %>
          <%= render "shared/error_messages", object: @category %>
          <div class = "fields" >
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :description %>
            <%= f.text_area :description, rows: 10, class: "form-control" %>

            <%= f.label :number_of_words_in_examination %>
            <%= f.number_field :number_of_words_in_examination, class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit t("category.update"), class: "btn btn-lg btn-primary" %>
          </div>
        <% end %>  
      </div>  
      <ol class = "questions">      
      </ol>    
    </div>
  </div>
</div>
