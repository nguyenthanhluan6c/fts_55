<% if @time_remaining > 0 %>
  <h3 class="pull-right text-danger" id="clock">
    <span id="hidden-data" data-time-over-msg="<%= t "time_over" %>"
      data-time-remaining="<%= @time_remaining %>">
    </span>
    <span class="glyphicon glyphicon-time">&nbsp</span>
    <b id="time-remaining"></b>
  </h3>
<% end %>
<div class="row">
  <%= form_for @examination do |f| %>
    <ol class="results">
      <%= f.fields_for :results do |r| %>
        <%= render r.object, r: r %>
      <% end %>
    </ol>
    <%= f.submit t("save"), class: "btn btn-warning" %>
    <%= f.submit t("finish"), class: "btn btn-success" %>
  <% end %>
</div>
