<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("my_app.name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li> 
        <% if user_signed_in? %>
          <% if can? :manage, Category %>
            <li><%= link_to t("categories"), admin_categories_path %></li> 
          <% end %>
          <% if can? :manage, User %>
            <li><%= link_to t("users"), admin_users_path %></li> 
          <% end %>
          <% if can? :manage, Question %>
            <li><%= link_to t("questions"), admin_questions_path %></li> 
          <% end %>
          <% if can?(:create, Question) && !current_user.admin?%>
            <li><%= link_to t("contribute_question"), new_question_path %></li> 
          <% end %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("setting"), edit_user_registration_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t("signout"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sign_in"), new_user_session_path %></li>
          <li><%= link_to t("sign_up"), new_user_registration_path %></li>
        <% end %>        
      </ul>
    </nav>
  </div>
</header>
